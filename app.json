{
    "expo": {
        "name": "Offera",
        "slug": "Offera",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/logo/logo.png",
        "userInterfaceStyle": "light",
        "splash": {
            "image": "./assets/logo/altSplash.png",
            "resizeMode": "cover",
            "backgroundColor": "#ffffff"
        },
        "assetBundlePatterns": ["**/*"],
        "ios": {
            "supportsTablet": true
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/logo/altLogo.png",
                "backgroundColor": "#ffffff"
            }
        },
        "web": {
            "favicon": "./assets/logo/logo.png"
        },
        "plugins": ["expo-font", "expo-router"],
        "experiments": {
            "typedRoutes": true,
            "tsconfigPaths": true
        },
        "scheme": "your-app-scheme"
    }
}
